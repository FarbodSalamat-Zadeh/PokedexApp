<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_primary_dark"
    tools:context=".ui.startup.SplashActivity">

    <ImageView
        android:src="@mipmap/ic_launcher"
        android:contentDescription="@string/app_name"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginTop="64dp"/>

    <TextView
        android:text="@string/app_name"
        android:textColor="@color/mdu_text_white"
        android:textSize="34sp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"/>

    <TextView
        android:text="@string/tip_persistent_text"
        android:textColor="@color/mdu_text_white_secondary"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp" />

    <TextView
        android:id="@+id/tip_text"
        android:text="@string/tip_dummy"
        android:textColor="@color/mdu_text_white"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mdu_spacing_normal"
        android:paddingLeft="@dimen/mdu_padding_normal"
        android:paddingRight="@dimen/mdu_padding_normal"/>

</LinearLayout>
