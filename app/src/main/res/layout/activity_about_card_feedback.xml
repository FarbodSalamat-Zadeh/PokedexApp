<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/AppTheme.CardView.Text.Title"
            android:text="@string/about_feedback"
            android:paddingTop="@dimen/card_padding_vertical_large"
            android:paddingBottom="@dimen/card_padding_vertical"
            android:paddingLeft="@dimen/card_padding_lateral"
            android:paddingRight="@dimen/card_padding_lateral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            style="@style/AppTheme.CardView.Text.Supporting"
            android:text="@string/about_feedback_desc"
            android:paddingBottom="@dimen/card_padding_vertical"
            android:paddingLeft="@dimen/card_padding_lateral"
            android:paddingRight="@dimen/card_padding_lateral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!-- TODO: Click on the button to open emails and send feedback -->
        <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:padding="@dimen/card_padding_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/button_feedback"
                android:text="@string/about_feedback_action"
                style="@style/AppTheme.Button.Flat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>