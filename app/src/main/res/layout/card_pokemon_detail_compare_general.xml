<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?colorPrimary"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/card_padding_vertical"
    android:paddingBottom="@dimen/card_padding_vertical"
    android:paddingRight="@dimen/card_padding_lateral"
    android:baselineAligned="false">

    <!-- (following removed as there would already
    be left padding in the parent view) -
    android:paddingLeft="@dimen/card_padding_lateral"
    -->

    <!-- id -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/mdu_spacing_micro">
        <TextView
            android:id="@+id/pokedexId_1"
            android:text="@string/dummy_id"
            style="@style/AppTheme.HeaderBarText.Primary.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/pokedexId_2"
            android:text="@string/dummy_id"
            style="@style/AppTheme.HeaderBarText.Primary.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"/>
    </LinearLayout>

    <!-- type text -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/mdu_spacing_micro"
        android:baselineAligned="false">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/mdu_spacing_micro"
            android:layout_marginEnd="@dimen/mdu_spacing_micro">
            <!-- TODO nested weights are bad! -->
            <TextView
                android:id="@+id/type1_1"
                android:text="@string/dummy_type"
                style="@style/AppTheme.HeaderBarText.Primary.Medium"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/type2_1"
                android:text="@string/dummy_type"
                style="@style/AppTheme.HeaderBarText.Primary.Medium"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/mdu_spacing_micro"
            android:layout_marginStart="@dimen/mdu_spacing_micro">
            <TextView
                android:id="@+id/type1_2"
                android:text="@string/dummy_type"
                style="@style/AppTheme.HeaderBarText.Primary.Medium"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/type2_2"
                android:text="@string/dummy_type"
                style="@style/AppTheme.HeaderBarText.Primary.Medium"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

    <!-- images -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView_1"
            android:src="@drawable/img_unknown"
            android:contentDescription="@string/img_desc_pokemon"
            android:scaleType="fitCenter"
            android:layout_gravity="bottom|end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/imageView_2"
            android:src="@drawable/img_unknown"
            android:contentDescription="@string/img_desc_pokemon"
            android:scaleType="fitCenter"
            android:layout_gravity="bottom|end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <!-- forms -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/form_1"
            android:text="@string/dummy_form"
            style="@style/AppTheme.HeaderBarText.Secondary.Larger"
            android:textStyle="italic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="top" />
        <TextView
            android:id="@+id/form_2"
            android:text="@string/dummy_form"
            style="@style/AppTheme.HeaderBarText.Secondary.Larger"
            android:textStyle="italic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="top|end" />
    </LinearLayout>

    <!-- pokemon name -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/pokemonName_1"
            android:text="@string/dummy_pokemon"
            style="@style/AppTheme.HeaderBarText.Primary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/pokemonName_2"
            android:text="@string/dummy_pokemon"
            style="@style/AppTheme.HeaderBarText.Primary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"/>
    </LinearLayout>

    <!-- species -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/species_1"
            android:text="@string/dummy_classification"
            style="@style/AppTheme.HeaderBarText.Secondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/species_2"
            android:text="@string/dummy_classification"
            style="@style/AppTheme.HeaderBarText.Secondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"/>
    </LinearLayout>

</LinearLayout>