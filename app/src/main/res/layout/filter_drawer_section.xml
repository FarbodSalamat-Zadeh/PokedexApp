<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/list_margin_top">
    <include layout="@layout/divider" />
    <TextView
        style="@style/AppTheme.TextView.DrawerSubhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/keyline_16"
        android:layout_marginStart="@dimen/keyline_16" />
    <LinearLayout
        style="@style/AppTheme.LinearLayout.StandardList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>