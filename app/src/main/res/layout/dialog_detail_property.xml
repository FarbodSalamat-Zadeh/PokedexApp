<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/AppTheme.CardView"
    app:cardUseCompatPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.PropertyDetailActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/card_padding_vertical_large"
        android:paddingBottom="@dimen/card_padding_vertical_large">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/card_padding_lateral"
            android:paddingRight="@dimen/card_padding_lateral">

            <TextView
                android:id="@+id/propertyDetail_tvTitle"
                android:text="@string/dummy_property"
                style="@style/AppTheme.CardView.Text.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/propertyDetail_tvDetailType"
                android:text="@string/title_activity_property_detail"
                style="@style/AppTheme.CardView.Text.Subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/card_padding_vertical"/>

            <TextView
                android:id="@+id/propertyDetail_tvDescription"
                android:text="@string/dummy_description"
                style="@style/AppTheme.CardView.Text.Supporting"
                android:paddingBottom="@dimen/card_padding_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/propertyDetail_llButtonBar"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/card_padding_actions"
            android:paddingRight="@dimen/card_padding_actions">
            <Button
                android:id="@+id/propertyDetail_btnFilter"
                android:text="@string/show_pokemon"
                style="@style/AppTheme.Button.Flat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
